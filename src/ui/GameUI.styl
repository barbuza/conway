body {
  margin 0
  font-family 'Audiowide', cursive
}

.Game {
  min-width 100vw
  min-height 100vh

  &--dragging {
    cursor move
  }

  &-buttons {
    display flex
    margin 20px 0
  }

  &-controls {
    position fixed
    right 0
    top 0
    padding 1em
    background #ccc
  }

  &-grid {
    position fixed
    top 0
    left 0
  }

  &-shipsMenu {
    margin-top 20px
    display flex
    flex-direction column
  }

  &-shipButton {
    cursor pointer

    &:hover {
      opacity 0.6
    }
  }
}
