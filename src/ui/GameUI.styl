body {
  margin 0
}

body, input {
  font-family 'Audiowide', cursive
}

.Game {
  min-width 100vw
  min-height 100vh

  &--dragging {
    cursor move
  }

  &-buttons {
    display flex
    margin 20px 0
  }

  &-controls {
    user-select none
    position fixed
    z-index 100
    right 0
    top 0
    padding 1em
    background #ccc

    input {
      margin-left 4px
    }
  }

  &-viewport {
    font-family Monaco, Consolas, "Lucida Console", monospace
    font-size 8px
  }

  &-controls-row {
    display flex
    align-items stretch
    justify-content space-between
    margin-top 4px
  }

  &-grid {
    position fixed
    top 0
    left 0
  }

  &-shipsMenu {
    margin 10px 0
    display flex
    flex-direction column
  }

  &-shipButton {
    cursor pointer
    font-size 12px

    &:hover {
      opacity 0.6
    }
  }

  &-controls-toggle {
    cursor pointer

    &:hover {
      opacity 0.6
    }
  }
}
