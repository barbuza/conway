.Area {
  position fixed
  top 0
  left 0
  pointer-events none

  &.Area--withFrame {
    background rgba(indianred, 0.2)
    box-shadow inset 0 0 1px rgba(indianred, 0.5)

    &.Area--still {
      background rgba(mediumseagreen, 0.1)
      box-shadow inset 0 0 1px rgba(mediumseagreen, 0.5)
    }
  }

}
